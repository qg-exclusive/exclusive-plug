<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qg.exclusiveplug.dao.DeviceMapper">
    <resultMap id="Device" type="com.qg.exclusiveplug.model.Device">
        <id column="id" jdbcType="INT" property="id" />
        <result column="LICENSEPLATENO" jdbcType="VARCHAR" property="licenseplateno"/>
        <result column="GPS_TIME" jdbcType="TIMESTAMP" property="gpsTime"/>
        <result column="LONGITUDE" jdbcType="DOUBLE" property="longitude"/>
        <result column="LATITUDE" jdbcType="DOUBLE" property="latitude"/>
        <result column="SPEED" jdbcType="INTEGER" property="speed"/>
        <result column="CAR_STAT1" jdbcType="CHAR" property="carStat1"/>
        <result column="GEOHASH" jdbcType="VARCHAR" property="geohash"/>
        <result column="ROW_KEY" jdbcType="VARCHAR" property="rowKey"/>
        <result column="HOUR_REPRE" jdbcType="VARCHAR" property="hourRepre"/>
    </resultMap>
    <insert id="saveDevices" parameterType="com.qg.exclusiveplug.model.Device">
        INSERT INTO device
        (name, current, voltage, power, date, power_factor,
        frequency, cumulative_power, index_num)
        VALUES
        <foreach collection="list" index="index" item="item" separator=",">
            (
              #{item.name},
              #{item.current},
              #{item.voltage},
              #{item.power},
              #{item.date},
              #{item.powerFactor},
              #{item.frequency},
              #{item.cumulativePower},
              #{item.index}
            )
        </foreach>
    </insert>
    <select id="listPowerSum" resultType="com.qg.exclusiveplug.model.Device">
        (SELECT id, index_num, date, cumulative_power
        FROM device
        <foreach collection="date" index="index" item="item" separator=",">
            WHERE index_num = ${index} AND date LIKE
            concat('%','${item.date}','%')
            ORDER BY date ASC
            LIMIT 1
        </foreach>
        )
        (SELECT id, index_num, date, cumulative_power
        FROM device
        <foreach collection="date" index="index" item="item" separator=",">
            WHERE index_num = ${index} AND date LIKE
            concat('%','${item.date}','%')
            ORDER BY date DESC
            LIMIT 1
        </foreach>
        )
    </select>
</mapper>